---
import { Image } from "astro:assets";
const { lang = "en" } = Astro.props;
import logo_white from "../images/logo 2 white.png";
const content = await import(`../data/${lang}.json`);
let text_direction = "md:text-left";
if (lang === "Ar") {
  text_direction = "md:text-right";
}
---

<footer class="bg-[#101D26] text-white">
  <div
    class="container section-container flex flex-col items-center justify-center w-full gap-10 text-sm md:text-base">
    <div
      class="flex flex-col items-center justify-between w-full space-y-10 pb-10 border-b-2 border-gray-400/20 md:flex-row">
      <!-- Company Information -->
      <div
        class=`w-full flex flex-col items-center justify-center space-y-5 text-center ${text_direction} md:w-1/3 md:items-start md:justify-center`>
        <Image src={logo_white} class="w-40" alt="logo" loading="eager" />
        <div class="leading-7 w-[80%]">
          {content.footer_headline}
        </div>
      </div>
      <!-- Navigation Links -->
      <div
        class="flex flex-col items-start sm:flex-row sm:justify-center gap-20 w-full sm:w-auto">
        <div>
          <h3 class="text-lg md:text-xl font-bold mb-4">
            {content.Quick_Links}
          </h3>
          <ul class="space-y-3">
            <li>
              <a href={`/${lang}`} class="hover:text-gray-400">{content.home}</a
              >
            </li>
            <li>
              <a href={`/${lang}/about`} class="hover:text-gray-400"
                >{content.about}</a
              >
            </li>
            <li>
              <a href={`/${lang}/contant`} class="hover:text-gray-400"
                >{content.contact}</a
              >
            </li>
          </ul>
        </div>
        <div>
          <h3 class="text-lg md:text-xl font-bold mb-4">{content.Solutions}</h3>
          <ul class="space-y-3">
            <li>
              <a
                href={`/${lang}/solutions/merchant-solutions`}
                class="hover:text-gray-400">{content.for_merchants}</a
              >
            </li>
            <li>
              <a
                href={`/${lang}/solutions/logistic-solutions`}
                class="hover:text-gray-400">{content.For_3PL_Companies}</a
              >
            </li>
          </ul>
        </div>
        <!-- Contact Information -->
        <div>
          <h3 class="text-lg md:text-xl font-bold mb-4">
            {content.Registration}
          </h3>
          <ul class="space-y-3">
            <li>
              <a
                href={`/${lang}/registration/logistic-companies`}
                class="hover:text-gray-400">{content.LC}</a
              >
            </li>
            <li>
              <a
                href={`/${lang}/registration/merchants`}
                class="hover:text-gray-400">{content.Merchants}</a
              >
            </li>
            <li>
              <a
                href={`/${lang}/registration/drivers`}
                class="hover:text-gray-400">{content.drivers}</a
              >
            </li>
            <li>
              <a
                href={`/${lang}/registration/employees`}
                class="hover:text-gray-400">{content.Employees}</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
    <!-- Legal Links -->
    <div
      class="text-center text-gray-500 flex flex-col space-y-3 md:space-y-0 md:flex-row justify-between items-center w-full">
      <div>
        <div>{content.copyright}</div>
        <div>
          <a href="/" class="hover:text-gray-400">{content.PP}</a> |
          <a href="/" class="hover:text-gray-400">{content.TOS}</a>
        </div>
      </div>

      <div class="flex gap-4">
        <a href="/facebook" aria-label="facebook-link">
          <svg
            class="socials"
            viewBox="0 0 25 25"
            xmlns="http://www.w3.org/2000/svg">
            <path
